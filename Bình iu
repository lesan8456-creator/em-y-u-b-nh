  <script>
    const tp = document.getElementById('tp');
    let offset = 0;
    const speed = 0.4;
    let last = performance.now();

    function animate(now) {
      const dt = now - last;
      last = now;
      offset += speed * dt * 0.03;
      if (offset > 100) offset -= 100;
      tp.setAttribute('startOffset', offset + '%');
      requestAnimationFrame(animate);
    }

    requestAnimationFrame(animate);
  </script>
